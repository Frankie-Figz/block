{{!-- STUDENT SCHEDULE --}}
<div class="container-fluid">
  <div class="jumbotron student-schedule" >
    <h4>Schedule</h4>
    <hr>
    <div class="container timetable">
      <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active display-carousel">
            {{!-- active timetable renders here --}}
          </div>
          <div class="carousel-item">
            {{!-- timetable permutations render here --}}
          </div>
        </div>
        {{!-- carousel controls --}}
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <button class="btn btn-secondary clear-btn btn-sm" type="clear">Clear Schedule</button>
  </div>
</div>

<script>
  var timetable = new Timetable();
  timetable.setScope(9,20);
  timetable.addLocations(['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday']);
  var renderer = new Timetable.Renderer(timetable);
  renderer.draw('.timetable');
</script>

{{!-- CLASS INFO --}}
<div class="container-fluid class-info">
  <div class="row">

    {{!-- SUBJECT --}}
    <div class="col-6">
      <div class="jumbotron subject-display">
        <h4>Choose a Subject</h4>
        <ul class="list-group list-group-flush" id="subject-list">
          {{#each subject}}
          <li class="list-group-item">
            <button class="btn btn-link subject-btn btn-sm" data-id="{{id}}" data-name="{{subject_name}}">{{subject_name}}</button>
          </li>
          {{/each}}
          <hr>
        </ul>
      </div>
    </div>

    {{!-- CLASSES --}}
    <div class="col-6">
      <div class="jumbotron classes-display">
        <h4>Classes</h4>
        <ul class="list-group list-group-flush" id="classes-list">
          {{!-- Display classes --}}
        </ul>
      </div>
    </div>
  </div>
</div>