{{!-- STUDENT SCHEDULE --}}
<div class="container-fluid">
  <div class="row">

    <div class="col-8">
      <div class="jumbotron student-schedule" >
        <h4>Schedule</h4>
        <hr>
        <p id="schedule-counter" style="font-size: smaller;">0 of 0</p>
        <div class = "timetable"> 
          {{!-- Timetable Renders Here --}}
        </div>
        <a class="control-prev" href="#" role="button" data-slide="prev">
          <span><i class="fa fa-chevron-left"></i></span>
          <span class="sr-only">Previous</span>
        </a>
        <button class="btn btn-secondary save-btn btn-sm" type="button">Save</button>
        <button class="btn btn-secondary clear-btn btn-sm" type="clear">Clear</button>
        <a class="control-next" href="#" role="button" data-slide="next">
          <span><i class="fa fa-chevron-right"></i></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-4">
      <div class="jumbotron class-list">
        <div class="container">
          <h4>Classes Added</h4>
          <ul class="list-group list-group-flush" id="classes-scheduled">
            {{!-- Classes Selected Added Here --}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  
</div>

{{!-- CLASS INFO --}}
<div class="container-fluid class-info">
  <div class="row">

    {{!-- SUBJECT --}}
    <div class="col-6">
      <div class="jumbotron subject-display">
        <h4>Choose a Subject</h4>
        <ul class="list-group list-group-flush" id="subject-list">
          {{#each subject}}
          <li class="list-group-item">
            <button class="btn btn-link subject-btn btn-sm" data-id="{{id}}" data-name="{{subject_name}}">{{subject_name}}</button>
          </li>
          {{/each}}
          <hr>
        </ul>
      </div>
    </div>

    {{!-- CLASSES --}}
    <div class="col-6">
      <div class="jumbotron classes-display">
        <h4>Available Classes</h4>
        <ul class="list-group list-group-flush" id="classes-list">
          {{!-- Display Classes --}}
        </ul>
      </div>
    </div>
  </div>
</div>

